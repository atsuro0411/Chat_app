<%= form_with url: groups_path, method: :post do |f| %>
  <% @users.each do |user| %>
    <div>
      <%= check_box_tag "user_ids[]", user.id %>
      <%= label_tag "user_ids_#{user.id}", user.name %>
    </div>
  <% end %>

  <%= hidden_field_tag :current_user_id, current_user.id %>

  <%= f.submit "グループ作成" %>
<% end %>